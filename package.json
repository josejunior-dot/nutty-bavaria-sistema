{
  "name": "nutty-bavaria-sistema",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "db:migrate": "pnpm --filter backend prisma migrate dev",
    "db:seed": "pnpm --filter backend db:seed",
    "db:studio": "pnpm --filter backend prisma studio",
    "db:generate": "pnpm --filter backend prisma generate",
    "lint": "pnpm -r lint",
    "test": "pnpm --filter backend test",
    "test:watch": "pnpm --filter backend test:watch"
  }
}
