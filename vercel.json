{
  "installCommand": "cd frontend && npm install --production=false",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "routes": [
    { "src": "/api/(.*)", "dest": "https://nutty-bavaria-sistema.onrender.com/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
